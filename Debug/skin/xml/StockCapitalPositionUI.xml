<?xml version="1.0" encoding="UTF-8"?><!--功能:现货资金持仓界面-->
<Window>
	<VerticalLayout bkcolor="#FFF5FFFA">
		<Label text="资金持仓" height="25" padding="20,0,0,0" font="0" textcolor="#FFFF0000"/>				
		<Control height="2" bkcolor="#FFBFEFFF"/>
		<HorizontalLayout height="100">
			<VerticalLayout width="170">					
				<HorizontalLayout height="20" padding="30,10,0,0">
					<Label text="资金余额:" width="60" font="1" textcolor="#FFFF0000"/>
					<Label name="RemainCapitalLab" width="100" font="4" padding="10,0,0,0" />
				</HorizontalLayout>
				<HorizontalLayout height="20" padding="30,10,0,0">
					<Label text="冻结金额:" width="60" font="1" textcolor="#FFFF0000"/>
