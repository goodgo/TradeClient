				</HorizontalLayout>
				<HorizontalLayout  height="20" padding="30,10,0,0">
					<Label text="总资产:" width="60" font="1" textcolor="#FFFF0000"/>
					<Label name="TotalCapitalLab" width="100" font="4" padding="10,0,0,0" />						
				</HorizontalLayout>
			</VerticalLayout>
			<VerticalLayout width="170">	
				<HorizontalLayout height="20" padding="30,10,0,0">
					<Label text="可用金额:" width="60" font="1" textcolor="#FFFF0000"/>
					<Label name="CanUseCapitalLab" width="100" font="4" padding="10,0,0,0" />						
				</HorizontalLayout>
				<HorizontalLayout height="20" padding="30,10,0,0">
					<Label text="证券市值:" width="60" font="1" textcolor="#FFFF0000"/>
					<Label name="MarketValueLab" width="100" font="4" padding="10,0,0,0"/>
				</HorizontalLayout>
			</VerticalLayout>
		</HorizontalLayout>
		<Control height="2" bkcolor="#FFE0EEEE"/>
		<HorizontalLayout>
			<Include source="xml/StockOrderList.xml" />
		</HorizontalLayout>
	</VerticalLayout>
